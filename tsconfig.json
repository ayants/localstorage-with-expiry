{
  "compilerOptions": {
    "target": "es5", // Keep for broad browser support
    "module": "esnext", // Use ES Modules instead of CommonJS
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
